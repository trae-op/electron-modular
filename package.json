{
  "name": "@devisfuture/electron-modular",
  "version": "1.2.21",
  "description": "Core module system, DI container, IPC handlers, and window utilities for Electron main process.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trae-op/electron-modular.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": [
    "./src/reflect-metadata.ts",
    "./dist/index.js"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose --reporter=json",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "electron": ">=28.3.3"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "electron": "^36.4.0",
    "reflect-metadata": "^0.2.2",
    "tsup": "^8.5.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "electron",
    "di",
    "ipc",
    "windows",
    "decorators",
    "dependency-injection",
    "modular-architecture",
    "di-container",
    "inversion-of-control",
    "decorator-pattern",
    "main-process",
    "renderer-process",
    "esm",
    "reflect-metadata",
    "lifecycle-hooks",
    "provider-pattern",
    "electron-node",
    "electron-modules",
    "electron-architecture"
  ],
  "license": "MIT"
}
